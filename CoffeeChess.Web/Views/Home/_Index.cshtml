<div class="music-player-panel">
    <div class="music-player-info">
        <div class="song-info">
            <img id="songCover" class="song-cover" src="" alt="cover"/>
            <div class="song-title-and-visualizer-container">
                <div class="song-title-container">
                    <span id="songAuthor" class="author"></span>
                    <span id="songTitle" class="song"></span>
                </div>
            </div>
        </div>
        <div class="song-controls-container">
            <button id="previousButton" class="song-control previous">
                <img src="~/img/song-control-triangle.png" alt="previous"/>
                <img src="~/img/song-control-triangle.png" alt="previous"/>
            </button>
            <button id="pauseButton" class="song-control pause">
                <img class="pause" src="~/img/song-control-pause.png" alt="pause"/>
            </button>
            <button id="nextButton" class="song-control next">
                <img src="~/img/song-control-triangle.png" alt="next"/>
                <img src="~/img/song-control-triangle.png" alt="next"/>
            </button>
        </div>
    </div>
    <button id="extendButton" class="extend-button">
        <img src="~/img/song-extend-icon.png" alt="extended"/>
    </button>
    <div id="songsList" class="songs-list dark-scrollable">
        
    </div>
</div>
<div class="welcome-panel" data-animation-order="0">
    <h1 class="welcome-title">Welcome!</h1>
    <p class="welcome-text">
        It's a Coffee-Chess® — a chess
        website with coffee identity, a
        cute place where you can play
        chess and relax...
    </p>
    @if (User.Identity is not null && User.Identity.IsAuthenticated)
    {
        <div class="welcome-buttons-container">
            <a class="ajax-nav-link welcome-button"
               asp-controller="Game" asp-action="GameCreation">Play</a>
        </div>
    }
    else
    {
        <div class="welcome-buttons-container">
            <a class="ajax-nav-link welcome-button" asp-controller="Account" asp-action="Login">Log in</a>
            <a class="welcome-button ajax-nav-link" asp-controller="Account" asp-action="Register">Sign up</a>
        </div>
    }
</div>